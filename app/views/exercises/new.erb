<div class="container mt-5">
  <h1 class="mb-4 text-dark font-weight-bold"><u>New Exercise</u></h1>
  <form action="/exercises" method="post">
    <div class="h4 form-group">
      <label for="name">Exercise Name:</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Bench-Press">
    </div>
    <div class="h4 form-group">
      <label for="description">Exercise Description:</label>
      <textarea class="form-control" id="description" name="description" rows="5"></textarea>
    </div>
    <button class="btn btn-lg btn-primary btn-block border border-muted" type="submit" value="submit">Submit</button>
  </form>
</div>
