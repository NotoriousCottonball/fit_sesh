<div class="container mt-5">
  <h1 class="mb-4 text-dark font-weight-bold"><u>New Exercise Entry</u></h1>
  <form action="/exercise_instances/new/<%= @workout.id %>" method="post">

    <div class="row">
      <div class="col-sm form-group h5">
          <label for="name">Select Exercise Name:</label>
          <select multiple class="form-control" id="name" name="exercise_instance[exercise_id]">
            <% @exercises.each do |exercise| %>
              <option value="<%= exercise.id %>"><%= exercise.name %></option>
            <% end %>
            <option value="">***New-Exercise***</option>
          </select>
      </div>

      <div class="col-2 text-center font-weight-bold p-3">
        <h5>- OR -</h5>
      </div>

      <div class="col-sm">
          <div class="form-group h5">
            <label for="exercise[name]">New Exercise Name:</label>
            <input type="text" class="form-control" id="exercise[name]" name="exercise[name]" placeholder="Bench-Press">
          </div>
          <div class="form-group h5">
            <label for="exercise[description]">New Exercise Description:</label>
            <textarea class="form-control" id="exercise[description]" name="exercise[description]" rows="5"></textarea>
          </div>
      </div>
    </div>
    <div class="row mt-5">
          <div class="col-sm form-group h5">
            <label for="exercise_instance[sets]">Sets:</label>
            <input type="number" class="form-control" id="exercise_instance[sets]" name="exercise_instance[sets]" placeholder="#">
          </div>
          <div class="col-sm form-group h5">
            <label for="exercise_instance[reps]">Reps:</label>
            <input type="number" class="form-control" id="exercise_instance[reps]" name="exercise_instance[reps]" placeholder="#">
          </div>
          <div class="col-sm form-group h5">
            <label for="exercise_instance[weight_lbs]">Weight(lb):</label>
            <input type="number" class="form-control" id="exercise_instance[weight_lbs]" name="exercise_instance[weight_lbs]" placeholder="#">
          </div>
          <div class="col-sm form-group h5">
            <label for="exercise_instance[exercise_rating]">Rating (1-5):</label>
            <input type="number" class="form-control" id="exercise_instance[exercise_rating]" name="exercise_instance[exercise_rating]" placeholder="#(1-5)">
          </div>
    </div>
    <div class="row">
        <div class="col-sm form-group h5">
          <label for="exercise_instance[notes]">Notes (Optional):</label>
          <textarea class="form-control" id="exercise_instance[notes]" name="exercise_instance[notes]" rows="5"></textarea>
        </div>
    </div>

    <button class="btn btn-lg btn-primary btn-block border border-muted" type="submit" value="submit">Submit</button>
  </form>
</div>
