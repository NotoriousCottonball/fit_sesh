<div class="text-center">
  <div class="jumbotron jumbotron-transparent">
    <h1 class="display-3 font-weight-bold">Fit Sesh</h1>
    <h3 class="mb-4 text-light">Your Fitness Companion</h3>
    <h4 class="mb-3 display-5 font-weight-light" style="color: #eddee6;"> Log | Track | Share </h4>
    <img class="rounded border border-primary d-block mx-auto mb-3" src="/images/fit_sesh_favicon.png" alt="" width="100" height="100">
    <h6 class="mb-4 text-dark">Fit Sesh &copy; 2019</h6>

     <% if logged_in? %>
      <div class="mb-3">
        <a href='/users/<%= current_user.slug %>' class="btn btn-lg btn-primary border border-muted mr-2">View Profile</a>
        <a href='/logout' class="btn btn-lg btn-dark border border-muted ml-2">Logout</a>
      </div>
      <div>
        <a href='/users/<%= current_user.slug %>' class="text-center btn-hover border border-0 rounded list-group-item list-group-item-action p-2 mt-4 h3 font-weight-bold" style="background-color: rgba(1, 5, 58, .75);">Welcome <%= current_user.username %>!</a>
      </div>
     <%else%>
         <a href='/login' class="btn btn-lg btn-primary border border-muted mr-2">Log in</a>
         <a href='/signup' class="btn btn-lg btn-secondary border border-muted ml-2 ">Sign up</a>
      <%end%>

  </div>
</div>
