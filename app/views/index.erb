<div class="text-center">
  <div class="jumbotron jumbotron-transparent">
    <h1 class="display-3 font-weight-bold">Fit Sesh</h1>
    <h3 class="mb-3 text-light">Your Fitness Companion</h3>
    <h4 class="mb-3 display-5 font-weight-light" style="color: #eddee6;"> Log | Track | Share </h4>
    <img class="rounded border border-primary d-block mx-auto mb-5" src="/images/fit_sesh_favicon.png" alt="" width="100" height="100">

     <% if logged_in? %>
      <div>
         <a href='/users/<%= current_user.slug %>' class="text-center my-4 btn-hover border border-0 rounded list-group-item list-group-item-action p-2 h3 font-weight-bold" style="background-color: rgba(1, 5, 58, .75);">Welcome <%= current_user.username %>!</a>
      </div>
      <div class="mb-3">
        <a href='/users' class="btn btn-xlarge btn-lg btn-secondary border border-muted m-2">View User Index</a>
        <a href='/users/<%= current_user.slug %>' class="btn btn-xlarge btn-lg btn-dark border border-muted m-2">View Your Profile</a>
        <a href='/exercises' class="btn btn-xlarge btn-lg btn-primary border border-muted m-2">View Exercise Index</a>
      </div>

     <%else%>
         <a href='/login' class="btn btn-xlarge btn-lg btn-primary border border-muted m-2">Log in</a>
         <a href='/signup' class="btn btn-xlarge btn-lg btn-secondary border border-muted m-2 ">Sign up</a>
     <%end%>

  </div>
</div>
