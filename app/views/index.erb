<div class="text-center">
  <div class="jumbotron jumbotron-transparent">
   <h1 class="display-3 font-weight-bold">Fit Sesh</h1>
   <h3 class="mb-4 text-light">Your Fitness Companion</h3>
   <img class="rounded d-block mx-auto mb-5 " src="/images/fit_sesh_favicon.png" alt="" width="100" height="100">

     <% if logged_in? %>
        <a href='/users/<%= current_user.slug %>' class="btn btn-lg btn-info mr-2">View Profile</a>
        <a href='/logout' class="btn btn-lg btn-dark ml-2">Logout</a>
        <h2 class="mt-5 display-4" style="color: aqua;">Welcome <%= current_user.username %>!</h2>
     <%else%>
         <a href='/login' class="btn btn-lg btn-primary mr-2">Log in</a>
         <a href='/signup' class="btn btn-lg btn-secondary ml-2 ">Sign up</a>
      <%end%>

  </div>
</div>
